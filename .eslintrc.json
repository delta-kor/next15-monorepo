{
  "extends": [
    "next/core-web-vitals",
    "prettier",
    "plugin:perfectionist/recommended-natural-legacy",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "tailwindcss/classnames-order": "error",
    "perfectionist/sort-imports": "off",
    "perfectionist/sort-interfaces": [
      "error",
      {
        "type": "natural",
        "ignoreCase": true,
        "groups": [
          "key",
          "ref",
          "try",
          "catch",
          "unknown",
          "width",
          "height",
          "callback",
          "class",
          "children"
        ],
        "customGroups": {
          "key": "key",
          "ref": "ref",
          "callback": "on*",
          "class": "className",
          "width": "width",
          "height": "height",
          "children": "children",
          "try": "try",
          "catch": "catch"
        }
      }
    ],
    "perfectionist/sort-objects": [
      "error",
      {
        "type": "natural",
        "ignoreCase": true,
        "groups": [
          "key",
          "ref",
          "try",
          "catch",
          "unknown",
          "width",
          "height",
          "callback",
          "class",
          "children"
        ],
        "customGroups": {
          "key": "key",
          "ref": "ref",
          "callback": "on*",
          "class": "className",
          "width": "width",
          "height": "height",
          "children": "children",
          "try": "try",
          "catch": "catch"
        }
      }
    ],
    "perfectionist/sort-object-types": [
      "error",
      {
        "type": "natural",
        "ignoreCase": true,
        "groups": [
          "key",
          "ref",
          "try",
          "catch",
          "unknown",
          "width",
          "height",
          "callback",
          "class",
          "children"
        ],
        "customGroups": {
          "key": "key",
          "ref": "ref",
          "callback": "on*",
          "class": "className",
          "width": "width",
          "height": "height",
          "children": "children",
          "try": "try",
          "catch": "catch"
        }
      }
    ],
    "perfectionist/sort-jsx-props": [
      "error",
      {
        "type": "natural",
        "ignoreCase": true,
        "groups": [
          "key",
          "ref",
          "try",
          "catch",
          "unknown",
          "width",
          "height",
          "callback",
          "shorthand",
          "class",
          "children"
        ],
        "customGroups": {
          "key": "key",
          "ref": "ref",
          "callback": "on*",
          "class": "className",
          "width": "width",
          "height": "height",
          "children": "children",
          "try": "try",
          "catch": "catch"
        }
      }
    ]
  }
}
